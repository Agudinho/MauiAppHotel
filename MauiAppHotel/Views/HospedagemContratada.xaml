<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{StaticResource Gray600}"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10"> 
            <StackLayout Orientation="Horizontal">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: "/>
                    <Label Text="{Binding QntAdultos}" TextColor="{StaticResource White}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="CrianÃ§as: "/>
                    <Label Text="{Binding QntCriancas}" TextColor="{StaticResource White}"/>
                </HorizontalStackLayout>
                
                
            </StackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" 
                       Grid.Column="0" 
                       Text="{Binding DataCheckin, StringFormat='{}{0:dd/MM/yyyy}'} "
                       TextColor="{StaticResource Black}"/>
                <Label Grid.Row="1" 
                       Grid.Column="1"
                       Text="{Binding DataCheckout, StringFormat='{}{0:dd/MM/yyyy}'}"
                        TextColor="{StaticResource Black}"/>
                <Label Grid.Row="1"
                       Grid.Column="2" 
                       Text="{Binding Estadia}"
                        TextColor="{StaticResource Black}"/>

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor total: "/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" 
                       TextColor="{StaticResource Black}"/>
            </HorizontalStackLayout>
        </Frame>
        <Button Text="Voltar" Clicked="Button_Clicked"
                HorizontalOptions="Center"
                BackgroundColor="{StaticResource Gray600}"
                TextColor="White" 
                FontSize="25" 
                FontFamily="Kalam"/>

    </VerticalStackLayout>
</ContentPage>