<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre" NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}"
             Title="Sobre">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Padding="15">
        <Label 
            Text="Tudo sobre o programador"
            FontFamily="Kalam"
            FontSize="55"
            TextColor="{StaticResource OffBlack}"/>

        <Frame  BackgroundColor="{StaticResource Gray100}" BorderColor="{StaticResource Gray100}" Padding="15">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="2*">
                    <Label Grid.Row="0" Grid.Column="0"
                           TextColor="{StaticResource Gray600}"
                           Text="Nome do desenvolvedor: Giovanni Agudinho Corrêa da Silva"
                           FontFamily="Kalam"
                           FontSize="35"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Gray600}"
                           Text="Data do desenvolvimento: 10/05/2025"
                           FontSize="35"
                           FontFamily="Kalam"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Ir para a página do hotel" 
                BackgroundColor="{StaticResource Gray600}" 
                TextColor="{StaticResource White}" 
                Clicked="Button_Clicked" 
                FontFamily="Kalam"
                FontSize="50"/>

    </VerticalStackLayout>
</ContentPage>